  min-height: 256px;
  padding: 18px 2px 12px 2px; /* top, right, bottom, left */
  margin: 0 auto;
  background-color: #fdfdfd;
  position: relative;
  overflow: hidden;
  align: center;
  border: 1px solid #e7e7e7;
